@inject SignInManager<User> signInManager;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotelManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HotelManagementSystem.styles.css" asp-append-version="true" />
    <link href="HotelManagementSystem.styles.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=DynaPuff&family=Ubuntu:ital,wght@1,300&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=DynaPuff&family=Exo+2:wght@500&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="height : 80px">
          <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-family: 'DynaPuff' cursive; font-size:x-large"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor02">
              <ul class="navbar-nav me-auto">
                <li class="nav-item">
                  <a style="font-family: 'Exo 2', sans-serif; font-size:larger" class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home
                    <span class="visually-hidden">(current)</span>  
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" style="font-family: 'Exo 2', sans-serif; font-size:larger" asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" style="font-family: 'Exo 2', sans-serif; font-size:larger" asp-area="" asp-controller="Home" asp-action="Services">Services</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" style="font-family: 'Exo 2', sans-serif; font-size:larger" asp-area="" asp-controller="Home" asp-action="Gallery">Gallery</a>
                </li>
              </ul>
                <ul class="navbar-nav ml-auto">
                        @if(signInManager.IsSignedIn(User))
                        {
                            <div class="mx-2 my-2 text-info">@User.Identity.Name</div>
                            <li class="nav-item">
                                <form method="post" asp-action="logout" asp-controller="Account" style="display:inline-block">
                                    <button style="font-family: 'Exo 2', sans-serif;" class="btn btn-secondary my-2 my-sm-0 mx-2">Sign Out</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <form method="get" asp-action="Login" asp-controller="Account" style="display:inline-block">
                                <button style="font-family: 'Exo 2', sans-serif;" class="btn btn-secondary my-2 my-sm-0 mx-2">Log In</button>
                                </form>
                                <form method="get" asp-action="SignUp" asp-controller="Account" style="display:inline-block" >
                                <button style="font-family: 'Exo 2', sans-serif;" class="btn btn-secondary my-2 my-sm-0 mx-2">Sign Up</button>
                                </form>
                            </li>
                           
                        }
                    </ul>
             </div>
          </div>

        </nav>
        </header>
        <main>
            @RenderBody()
        </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - HotelManagementSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
